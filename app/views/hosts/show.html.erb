<p id="notice"><%= notice %></p>
<section id="details">
  <h1><%= @host.host %></h1>

  <p>
    <b>TTL:</b>
    <%= @host.ttl %>
  </p>

  <p>
    <b>CNAME:</b>
    <%= @host.cname %>
  </p>

  <p>
    <b>Live CNAME:</b>
    <%= @host.live_cname %>
  </p>

  <p class="actions">
    <%= link_to 'Edit', edit_host_path(@host) %> |
    <%= link_to 'Back', hosts_path %>
  </p>
</section>

<section id="hits">
  <h1>Hits</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Count</th>
        <th>HTTP Status</th>
        <th>Path</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @host.hits.order(:count, :http_status, :path, :hit_on).each do |hit| %>
        <tr>
          <td><%= hit.count %></td>
          <td><%= hit.http_status %></td>
          <td><%= hit.path %></td>
          <td><%= hit.hit_on %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

