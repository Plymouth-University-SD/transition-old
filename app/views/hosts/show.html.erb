<p id="notice"><%= notice %></p>
<section id="details">
  <h1><%= @host.host %></h1>

  <p><b>Site:</b>
    <%= link_to @host.site.site, @host.site %>
  </p>

  <p>
    <b>TTL:</b>
    <%= @host.ttl %>
  </p>

  <p>
    <b>CNAME:</b>
    <%= @host.cname %>
  </p>

  <p>
    <b>Live CNAME:</b>
    <%= @host.live_cname %>
  </p>

  <p class="actions">
    <%= link_to 'Edit', edit_host_path(@host) %> |
    <%= link_to 'Back', hosts_path %>
  </p>
</section>

<section id="hits">
  <h1>Most recent hits (<%= @most_recent_hit_on_date %>)</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Count</th>
        <th>HTTP Status</th>
        <th>Path</th>
      </tr>
    </thead>
    <tbody>
      <% @hits.each do |hit| %>
        <tr>
          <td><%= hit.count %></td>
          <td><%= hit.http_status %></td>
          <td><%= hit.path %></td>
        </tr>
        <tr>
          <td colspan="3">
            <div class="progress">
              <div class="bar" style="width: <%= number_to_percentage((hit.count / @biggest_hit_count.to_f) * 100.0) %>%" title="<%= hit.count %>"></div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

