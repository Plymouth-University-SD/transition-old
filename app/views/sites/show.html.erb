<%= render 'sites/header', site: @site, organisation: @organisation %>

<%= render 'totals/stacked', total_data: @totals, host: @site.hosts.first, scope: @site %>

<%= render 'hits/most_recent', hit_data: @most_recent_hit_data, host: @site.hosts.first, scope: @site %>

<section id="hosts">
  <h1>Hosts</h1>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Host</th>
        <th>TTL</th>
        <th>CNAME</th>
        <th>Live CNAME</th>
      </tr>
    </thead>
    <tbody>
      <% @site.hosts.each do |host| %>
        <tr>
          <td><%= link_to host.host, host %></td>
          <td><%= host.ttl %></td>
          <td><%= host.cname %></td>
          <td><%= host.live_cname %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

