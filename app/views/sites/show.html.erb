<p id="notice"><%= notice %></p>
<section id="details">
  <h1 id="<%= @organisation.abbr %>" class="organisation <%= @organisation.css || "" %>"><%= link_to content_tag(:span, @organisation.title), @organisation %></h1>

  <dl>
    <dt>Site:</dt>
    <dd><%= @site.site %></dd>

    <dt>Homepage:</dt>
    <dd><%= link_to @site.homepage, @site.homepage %></dd>

    <dt>Query params:</dt>
    <dd><%= @site.query_params %></dd>

    <dt>TNA timestamp:</dt>
    <dd><%= @site.tna_timestamp %></dd>
  </dl>

</section>


<%= render 'totals/stacked', total_data: @totals, host: @site.hosts.first, scope: @site %>

<%= render 'hits/most_recent', hit_data: @most_recent_hit_data, host: @site.hosts.first, scope: @site %>

<section id="hosts">
  <h1>Hosts</h1>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Host</th>
        <th>TTL</th>
        <th>CNAME</th>
        <th>Live CNAME</th>
      </tr>
    </thead>
    <tbody>
      <% @site.hosts.each do |host| %>
        <tr>
          <td><%= link_to host.host, host %></td>
          <td><%= host.ttl %></td>
          <td><%= host.cname %></td>
          <td><%= host.live_cname %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

