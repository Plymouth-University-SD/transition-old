<h1>Listing organisations</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Abbreviation</th>
      <th>Title</th>
      <th>Launch date</th>
      <th>Homepage</th>
      <th>FURL</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.abbr %></td>
        <td><%= organisation.title %></td>
        <td><%= organisation.launch_date %></td>
        <td><%= organisation.homepage %></td>
        <td><%= organisation.furl %></td>
        <td>
          <%= link_to 'Show', organisation %>
          <%= link_to 'Edit', edit_organisation_path(organisation) %>
          <%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Organisation', new_organisation_path %>
