<p id="notice"><%= notice %></p>
<section id="details">
  <%= render_organisation_title @organisation %>

  <p>
    <b>Abbreviation:</b>
    <%= @organisation.abbr %>
  </p>

  <p>
    <b>Launch date:</b>
    <%= @organisation.launch_date %>
  </p>

  <p>
    <b>Homepage:</b>
    <%= link_to @organisation.homepage %>
  </p>

  <p>
    <b>FURL:</b>
    <%= link_to @organisation.furl, 'http://'+@organisation.furl %>
  </p>
</section>

<section class="dashboard">
  <%= render 'dashboard/organisation', organisation: OrganisationData.new(@organisation), full_meta_data: true %>
</section>

<section class="sites">
  <h1>Sites</h1>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Site</th>
        <th>Homepage</th>
        <th>Query params</th>
        <th>TNA timestamp</th>
      </tr>
    </thead>

    <tbody>
      <% @organisation.sites.each do |site| %>
        <tr>
          <td><%= link_to site.site, site %></td>
          <td><%= link_to site.homepage, site.homepage %></td>
          <td><%= site.query_params %></td>
          <td><%= site.tna_timestamp %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
